<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="250" d:DesignHeight="170"
             Width="250" Height="170"
             BorderThickness="1"
             BorderBrush="Cornsilk"
             Background="{DynamicResource BorderCardBackground}"
             x:Class="Ava.SocketTool.Views.Dialog.ErrorDialogView"
             Padding="20">

    <Grid RowDefinitions="2.5*,*">
        <TextBlock Text="发生错误" x:Name="ErrorMsg" Classes="Danger  H4" TextWrapping="Wrap" />


        <Button Grid.Row="1" Margin="0 0 20 0" Classes="Danger" HorizontalAlignment="Center"          
                VerticalAlignment="Center"
                Theme="{DynamicResource SolidButton}" Content="确定"
                Width="80"
                x:Name="Close" Click="Close_OnClick" />

    </Grid>
</UserControl>